<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HidiffyProxy.UserControl.ActiveProfileCard">
    <Frame BackgroundColor="#2A3A5F" CornerRadius="16" Padding="16" HasShadow="True">
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
            <Label Text="{Binding ActiveProfile.Name}" TextColor="White" FontSize="20" FontAttributes="Bold" VerticalOptions="Center"/>
            <ImageButton Source="more_vert.png" Command="{Binding ShowProfileMenuCommand}" Grid.Column="1" BackgroundColor="Transparent" WidthRequest="32" HeightRequest="32" VerticalOptions="Center"/>
        </Grid>
    </Frame>
</ContentView> 