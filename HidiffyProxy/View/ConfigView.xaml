<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HidiffyProxy.View.ConfigView"
             Title="Параметры конфигурации">
    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,20" Spacing="20">


            <!-- Экспериментальное предупреждение -->
            <Frame BackgroundColor="#262837" CornerRadius="12" Padding="12" HasShadow="False">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="light.svg" HeightRequest="24" WidthRequest="24" VerticalOptions="Start"/>
                    <Label Grid.Column="1"
                           Text="Функции с флагом «Экспериментально» все еще находятся в разработке и могут вызывать проблемы."
                           TextColor="{DynamicResource TextColor}"
                           FontSize="14"
                           Margin="12,0,0,0"/>
                </Grid>
            </Frame>

            <!-- Подробность журналирования -->
            <Label Text="Подробность журналирования" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="WARN" TextColor="{DynamicResource TextColor}" FontSize="16" Margin="0,0,0,10"/>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- Варианты маршрутизации -->
            <Label Text="Варианты маршрутизации" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Регион" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Россия (ru)" TextColor="{DynamicResource TextColor}" FontSize="14" Margin="0,0,0,10"/>

            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Блокировать рекламу (Экспериментальный)" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Обход локальной сети (Экспериментальный)" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Определять назначение" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Label Text="Маршрутизация IPv6" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Отключено" TextColor="{DynamicResource TextColor}" FontSize="14" Margin="0,0,0,10"/>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- Параметры DNS -->
            <Label Text="Параметры DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Удалённый DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="udp://1.1.1.1" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Стратегия удалённого домена DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="auto" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Прямой DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="1.1.1.1" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Стратегия прямого домена DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="auto" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Enable DNS Routing" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- Входящие параметры -->
            <Label Text="Входящие параметры" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Режим работы" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="Прокси" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Строгая маршрутизация" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Label Text="Реализация TUN" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="mixed" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Смешанный порт" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="12334" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Прозрачный прокси порт" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="12335" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Локальный порт DNS" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="16450" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Allow Connection from LAN (Экспериментальный)" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- TLS Tricks -->
            <Label Text="TLS Tricks (Экспериментальный)" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Enable TLS Fragment" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Label Text="TLS Fragment Size" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="10-30" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="TLS Fragment Sleep" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="2-8" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Enable TLS Mixed SNI Case" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Enable TLS Padding" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Label Text="TLS Padding" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="1-1500" TextColor="{DynamicResource TextColor}" FontSize="14"/>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- WARP Options -->
            <Label Text="WARP Options (Экспериментальный)" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <Label Text="Enable WARP" TextColor="{DynamicResource TextColor}" FontSize="16" VerticalOptions="Center"/>
                <Switch Grid.Column="1" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Label Text="Сгенерировать WARP конфиг" TextColor="#757575" FontSize="16"/>
            <Label Text="Detour Mode" TextColor="#757575" FontSize="16"/>
            <Label Text="Работа прокси через WARP" TextColor="#757575" FontSize="14"/>
            <Label Text="License Key" TextColor="#757575" FontSize="16"/>
            <Label Text="Не задано" TextColor="#757575" FontSize="14"/>
            <Label Text="Clean IP" TextColor="#757575" FontSize="16"/>
            <Label Text="auto" TextColor="#757575" FontSize="14"/>
            <Label Text="Port" TextColor="#757575" FontSize="16"/>
            <Label Text="0" TextColor="#757575" FontSize="14"/>
            <Label Text="Noise" TextColor="#757575" FontSize="16"/>
            <Label Text="1-3" TextColor="#757575" FontSize="14"/>
            <Label Text="Шумовой режим" TextColor="#757575" FontSize="16"/>
            <Label Text="m6" TextColor="#757575" FontSize="14"/>
            <Label Text="Размер шума" TextColor="#757575" FontSize="16"/>
            <Label Text="10-30" TextColor="#757575" FontSize="14"/>
            <Label Text="Задержка шума" TextColor="#757575" FontSize="16"/>
            <Label Text="10-30" TextColor="#757575" FontSize="14"/>

            <BoxView HeightRequest="1" Color="#393646" Margin="0,10,0,10"/>

            <!-- Разные параметры -->
            <Label Text="Разные параметры" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="URL проверки подключения" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="http://connectivitycheck.gstatic.com/generate_204" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Интервал проверки URL" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="10 minutes" TextColor="{DynamicResource TextColor}" FontSize="14"/>
            <Label Text="Порт Clash API" TextColor="{DynamicResource TextColor}" FontSize="16"/>
            <Label Text="16756" TextColor="{DynamicResource TextColor}" FontSize="14"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>