<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HidiffyProxy.View.MainView"
             xmlns:view="clr-namespace:HidiffyProxy.View"
             xmlns:local="clr-namespace:HidiffyProxy.UserControl"
             Title="Добавить профиль">

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ImageButton Source="add_circle.svg"  Command="{Binding ShowModalCommand}" Grid.Row="0" Grid.Column="5" WidthRequest="20" HeightRequest="20" VerticalOptions="Start"/>
        <ImageButton Source="list_proxy.svg"  Command="{Binding ShowBottomSheetCommand}" Grid.Row="0" Grid.Column="4" WidthRequest="30" HeightRequest="30" VerticalOptions="Start"/>

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="1" Grid.Column="0" Grid.RowSpan="9" Grid.ColumnSpan="6">
            <local:ActiveProfileCard IsVisible="{Binding ActiveProfile, Converter={StaticResource NullToBoolConverter}}" BindingContext="{Binding .}"/>
            <Label Text="Начните с добавления профиля подписки" TextColor="{DynamicResource TextColor}" FontSize="16" HorizontalTextAlignment="Center" Padding="20" IsVisible="{Binding ActiveProfile, Converter={StaticResource NullToInvertedBoolConverter}}"/>
            <Button Text="+ Новый профиль" Command="{Binding ShowModalCommand}" TextColor="#A2C6FF" FontSize="18" BackgroundColor="Transparent" BorderColor="#A2C6FF" BorderWidth="1" CornerRadius="24" Padding="32,8" HorizontalOptions="Center" IsVisible="{Binding ActiveProfile, Converter={StaticResource NullToInvertedBoolConverter}}"/>
        </StackLayout>

        <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="6" HeightRequest="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ImageButton Source="main.svg" Background="Gray" Grid.Column="0" WidthRequest="80" CornerRadius="50"/>
            <ImageButton Source="proxy.svg" Command="{Binding NotFound}" Background="Transparent" Grid.Column="1" WidthRequest="80" CornerRadius="50"/>
        </Grid>

        <!-- Модальное окно поверх всего -->
        <view:NewProfileModal IsVisible="{Binding IsModalVisible, Mode=TwoWay}" BindingContext="{Binding .}" Grid.Row="5" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="6"/>
        <view:BottomSheetView IsVisible="{Binding IsBottomSheetVisible, Mode=TwoWay}" BindingContext="{Binding .}" Grid.Row="4" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="6"/>
    </Grid>

</ContentPage>
