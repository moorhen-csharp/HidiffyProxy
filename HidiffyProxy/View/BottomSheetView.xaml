<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HidiffyProxy.View.BottomSheetView"
             IsVisible="{Binding IsVisible, Mode=TwoWay}">
    <Grid BackgroundColor="#80000000" VerticalOptions="End">
        <Border BackgroundColor="{DynamicResource ModalBackgroundColor}" Padding="24" VerticalOptions="End">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="10">
                <Grid ColumnDefinitions="*,*" HeightRequest="44" Margin="0,0,0,10">
                    <Border Grid.ColumnSpan="2"  BackgroundColor="{DynamicResource ButtonBackgroundColor}" Stroke="{x:Null}" StrokeShape="RoundRectangle 22"  HeightRequest="44" VerticalOptions="Center"/>

                    <Button Grid.Column="0" Text="Прокси"  Command="{Binding SelectProxyCommand}" BackgroundColor="{Binding IsProxySelected, Converter={StaticResource BoolToColorConverter}}"  CornerRadius="22" HeightRequest="44" Margin="2,2,1,2"/>

                    <!--<Button Grid.Column="0" Text="Прокси"  Command="{Binding SelectProxyCommand}" BackgroundColor="{Binding IsProxySelected, Converter={StaticResource BoolToColorConverter}}" TextColor="{Binding IsProxySelected, Converter={StaticResource TabTextConverter}}"  CornerRadius="22" HeightRequest="44" Margin="2,2,1,2"/>-->

                    <!--<Button Command="{Binding SelectProxyCommand}" Text="Прокси" TextColor="White" HeightRequest="50" WidthRequest="80" CornerRadius="25" 
                        BackgroundColor="{Binding IsSugarListVisible, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#2d2d2f,#4CAF50'}"/>-->
                    <!--<Button Grid.Column="1"  Command="{Binding SelectVpnCommand}" Text="VPN" TextColor="White" HeightRequest="50" WidthRequest="80" CornerRadius="25" 
                        BackgroundColor="{Binding IsFoodListVisible, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#2d2d2f,#4CAF50'}"/>-->

                    <Button Grid.Column="1" Text="VPN" Command="{Binding SelectVpnCommand}"  BackgroundColor="{Binding IsVpnSelected, Converter={StaticResource BoolToColorConverter}}"  CornerRadius="22" HeightRequest="44" Margin="1,2,2,2"/>
                    <!--<Button Grid.Column="1" Text="VPN" Command="{Binding SelectVpnCommand}"  BackgroundColor="{Binding IsVpnSelected, Converter={StaticResource BoolToColorConverter}}" TextColor="{Binding IsVpnSelected, Converter={StaticResource TabTextConverter}}" CornerRadius="22" HeightRequest="44" Margin="1,2,2,2"/>-->

                </Grid>

                <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                    <Label Text="Enable WARP" Grid.Column="0" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding IsWarpEnabled}" Grid.Column="1" VerticalOptions="Center" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                    <Label Text="Enable TLS Fragment" Grid.Column="0" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding IsTlsFragmentEnabled}" Grid.Column="1" VerticalOptions="Center" />
                </Grid>

                <Button Text="Все параметры" Background="{DynamicResource ButtonBackgroundColor}" TextColor="{DynamicResource TextModalColor}" />

                <Button Text="Закрыть"
                   
                    Background="{DynamicResource ButtonBackgroundColor}"
                    TextColor="{DynamicResource TextModalColor}"
                    Clicked="OnCloseClicked"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>
